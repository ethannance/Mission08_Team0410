@model List<AddTask>

<div class="container">
    <div class="row"><h1>Steven Covey's Time Management Matrix</h1></div>
    <div class="row">
        <div class="col"></div>
        <div class="col"><h2>Urgent</h2></div>
        <div class="col"><h2>Not Urgent</h2></div>
    </div>
    <div class="row">
        <div class="col"><h2>Important</h2></div>
        <div class="col">
            <h3>Quadrant 1</h3>
            @foreach (var x in Model)//.Where(x => x.Quadrant == 1))
            {
                <p>@x.TaskName</p> 
                <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a>
                <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a>
                <br />
            }
        </div>
        <div class="col">
            <h3>Quadrant 2</h3>
            @foreach (var x in Model)//.Where(x => x.Quadrant == 2))
            {
