@{
}



<div class="container">
    <div class="row"><h1>Steven Covey's Time Management Matrix</h1></div>
    <div class="row">
        <div class="col"></div>
        <div class="col"><h2>Urgent</h2></div>
        <div class="col"><h2>Not Urgent</h2></div>
    </div>
    <div class="row">
        <div class="col"><h2>Important</h2></div>
        <div class="col">
            <h3>Quadrant 1</h3>
            @foreach (var x in Model.Where(m => m.Quadrant == 1))
            {
                <p>@x.Task</p> <br />
            }
        </div>
        <div class="col">
            <h3>Quadrant 2</h3>
            @foreach (var x in Model.Where(m => m.Quadrant == 2))
            {
                <p>@x.Task</p> <br />
            }
        </div>
    </div>
    <div class="row">
        <div class="col"><h2>Not Important</h2></div>
        <div class="col">
            <h3>Quadrant 3</h3>
            @foreach (var x in Model.Where(m => m.Quadrant == 3))
            {
                <p>@x.Task</p> <br />
            }
        </div>
        <div class="col">
            <h3>Quadrant 4</h3>
            @foreach (var x in Model.Where(m => m.Quadrant == 4))
            {
                <p>@x.Task</p> <br />
            }
        </div>
    </div>
</div>

